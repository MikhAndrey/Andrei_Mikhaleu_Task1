@model Andrei_Mikhaleu_Task1.Models.ViewModels.RegisterViewModel

<form asp-action="Index" class="bootstrap-form tp-form">
    <h2 class="tp-label">Registration</h2>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group tp-form-group">
        <label asp-for="UserName" class="tp-label"></label>
        <input type="text" asp-for="UserName" class="form-control tp-text-input" required>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group tp-form-group">
        <label asp-for="Password" class="tp-label"></label>
        <input type="password" asp-for="Password" class="form-control tp-text-input" required>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Register</button>
</form>
