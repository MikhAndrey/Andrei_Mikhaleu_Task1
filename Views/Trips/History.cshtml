@model List<TripViewModel>
<h1>Completed Trips</h1>
<div class="row row-cols-2">
	@if (Model.Count == 0)
	{ 
			<p>You have no completed trips.</p>
	}
	else
	{ 
		@foreach (var trip in Model)
		{ 
					<div class="col mb-4">
						<div class="card h-100">
							<div class="card-body">
							<h5 class="card-title">@trip.Name</h5>
							<p class="card-text">@trip.Description</p>
							<ul class="list-group list-group-flush">
								<li class="list-group-item text-right">Departure time: @trip.StartTime.ToString("dd.MM.yyyy HH:mm")</li>
								<li class="list-group-item text-right">Arrival time: @trip.EndTime.ToString("dd.MM.yyyy HH:mm")</li>
							</ul>
							<div> 
								<a href="@Url.Action("Details", new { id = trip.TripId })" class="btn btn-primary mr-2">Details</a> 
								<a href="@Url.Action("Edit", new { id = trip.TripId })" class="btn btn-secondary mr-2">Edit</a> 
								<a href="@Url.Action("Delete", new { id = trip.TripId })" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</a>
							</div>
							</div>
						</div>
					</div>
		}        
	} 
</div>