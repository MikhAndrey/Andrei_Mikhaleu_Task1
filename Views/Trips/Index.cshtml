@model List<TripViewModel>
<h1>My Trips</h1>

@if (Model.Count == 0)
{
    <p>You have no trips.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Trip name</th>
                <th>Description</th>
                <th>Departure time</th>
                <th>Arrival time</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Name</td>
                <td>@trip.Description</td>
                <td>@trip.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@trip.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    @if (trip.IsCurrent)
                    {
                        <span class="badge badge-pill badge-info">Ongoing</span>
                    }
                    else if (trip.IsFuture)
                    {
                        <span class="badge badge-pill badge-warning">Planned</span>
                    }
                    else if (trip.IsPast)
                    {
                        <span class="badge badge-pill badge-success">Completed</span>
                    }
                </td>
                <td><a href="@Url.Action("Details", new { id = trip.TripId })">Details</a></td>
            </tr>
        }
        </tbody>
    </table>
}